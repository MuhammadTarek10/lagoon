@model IEnumerable<Lagoon.Domain.Entities.Villa>


<div class="w-100 card border-0 p-4">
  <div class="card-header bg-success bg-gradient ml-0 py-3">
      <div class="row">
        <div class="col-12 text-center">
          <h2 class="text-white py-2">Villa List</h2>
        </div>
      </div>
  </div>
  <div class="card-body border p-4">
    <div class="row pb-3">
      <div class="col-6 offset-6 text-end">
        <a href="@Url.Action("Create")" class="btn btn-secondary">
          <i class="bi bi-plus-circle"></i> Create New Villa
        </a>
      </div>
    </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Rooms</th>
          <th>Squre Feet</th>
          <th>Actions</th>
        </tr>
        <tbody>
          @foreach (var villa in Model)
          {
            <tr>
              <td>@villa.Name</td>
              <td>@villa.Price</td>
              <td>@villa.Rooms</td>
              <td>@villa.Sqft</td>
              <td>
                <a href="@Url.Action("Edit", new { id = villa.Id })" class="btn btn-primary">
                  <i class="bi bi-pencil"></i> Edit
                </a>
                <a href="@Url.Action("Details", new { id = villa.Id })" class="btn btn-info">
                  <i class="bi bi-eye"></i> Details
                </a>
                <a href="@Url.Action("Delete", new { id = villa.Id })" class="btn btn-danger">
                  <i class="bi bi-trash"></i> Delete
                </a>
            </tr>
          }
        </tbody>
      </thead>
    </table>
  </div>
</div>

