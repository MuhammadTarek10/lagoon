@model Villa

<div class="w-100 card border-0 p-4">
  <div class="card-header bg-success bg-gradient ml-0 py-3">
      <div class="row">
        <div class="col-12 text-center">
          <h2 class="text-white py-2">Create Villa</h2>
        </div>
      </div>
  </div>
  <div class="card-body border p-4">
    <form class="row" method="post">
      <div class="p-3">
        <div class="form-group py-1">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control border shadow" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group py-1">
          <label asp-for="Description" class="form-label"></label>
          <input asp-for="Description" class="form-control border shadow" />
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group py-1">
          <label asp-for="Price" class="form-label"></label>
          <input asp-for="Price" class="form-control border shadow" type="number" />
          <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group py-1">
          <label asp-for="Sqft" class="form-label"></label>
          <input asp-for="Sqft" class="form-control border shadow" type="number" />
          <span asp-validation-for="Sqft" class="text-danger"></span>
        </div>
        <div class="form-group py-1">
          <label asp-for="Rooms" class="form-label"></label>
          <input asp-for="Rooms" class="form-control border shadow" type="number"/>
          <span asp-validation-for="Rooms" class="text-danger"></span>
        </div>
        <div class="form-group py-1">
          <label asp-for="ImageUrl" class="form-label"></label>
          <input asp-for="ImageUrl" class="form-control border shadow" />
          <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div asp-validaion-summary="ModelOnly"></div>
      </div>
      <div class="row pt-2">
        <div class="col-6 col-md-3">
          <button type="submit" class="btn btn-success w-100">
            <i class="bi bi-check-circle"></i> Submit
          </button>
        </div>
        <div class="col-6 col-md-3">
          <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
            <i class="bi bi-x-circle"></i> Cancel
          </a>
        </div>
      </div>
    </form>
  </div>
</div>



@section Scripts
{
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}
